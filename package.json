{
  "name": "kasir-app",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 wait-on http://localhost:5173 && electron .\"",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder --win"
  },
  "dependencies": {
    "@zxing/browser": "^0.1.5",
    "chart.js": "^4.5.1",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.kasir.app",
    "productName": "KASIR APP",
    "asar": true,
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "compression": "maximum"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
